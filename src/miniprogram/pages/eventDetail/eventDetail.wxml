<view class="text-sl">Title</view>

<swiper class="card-swiper" indicator-dots="false" circular="false" autoplay="true" interval="5000" duration="500" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <!--      <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
-->
    </view>
  </swiper-item>
</swiper>

<view class="flex">
  <view class="flex-sub commoditySelector" style="margin-right:20px;">
    <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
      {{picker[index]}}
    </picker>
  </view>


</view>