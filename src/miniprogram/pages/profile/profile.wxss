/* miniprogram/pages/profile/profile.wxss */
.uiFooter{
  position: relative;
  bottom: 2%;
  font-size: 12px;
  font-family: "RaleWay";
  font-style: "normal";
  font-weight: 500;
  color: grey;
  text-align: center;
  width: 100%;
  margin-bottom: 5px;
}

.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:opacity .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}

.qrcode {
    height: 420rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.qrcode > canvas {
    width: 420rpx;
    height: 420rpx;
}

.uiDesc {
  font-size: 15px;
  font-family: "RaleWay";
  font-style: "normal";
  font-weight: 400;
  color: black;
  text-align: center;
  width: 100%;
}